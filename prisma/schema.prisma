datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ProjectStatus {
  TO_BE_STARTED
  IN_PROGRESS
  DONE
}

model Project {
  id        String        @id @default(uuid())
  title     String
  status    ProjectStatus @default(TO_BE_STARTED)
  tags      String[]      // array of text
  notes     String?
  createdAt DateTime      @default(now())
}